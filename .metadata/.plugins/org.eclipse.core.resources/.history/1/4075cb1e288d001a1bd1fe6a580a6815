            <ee:message>
                <ee:set-payload><![CDATA[%dw 2.0
output application/xml writeDeclaration = false
---
html:{    
  head:{
    title: 'StupidPen ! - ' ++ (vars.gameId default ''),
    script @('src':'https://cdn.jsdelivr.net/npm/vue/dist/vue.js'):' '
  },
  body:{
    div @('id':'app'):{
      h2: 'Messages in ' ++ (vars.gameId default ''),
      ul:{
        li @('v-for':'message in messages'):'{{message}}'
      },
      form @('@submit.prevent':'send'):{
        'input' @('type':'text', 'v-model':'newm'):'',
        'input' @('type':'submit', 'value':'Post'):'',
      }
    },
    script: "
      var ws = new WebSocket('" ++ p('ws.url') ++ "/g/'+window.location.pathname.split('/').pop());
      var app = new Vue({
        el: '#app',
        data: {
          messages: [],
          newm: ''
        },
        created(){
          ws.onmessage = ({ data }) => {
            this.messages.push(data);
          };
        
        },
        //Vue Methods hook
        methods: {
          send(){
            ws.send(this.newm);
            this.newm = null;
          }
        }
      })
    "
  }
}]]></ee:set-payload>
            </ee:message>
        </ee:transform>
